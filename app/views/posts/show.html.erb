<% provide :title, t("post") %>

<div class="blog-box1">
  <div class="blog-box-content">
    <span>
      <h1>
        <strong><%= link_to @post.title, post_path(@post) %></strong>
        <% if admin_signed_in? %>
          <small>
              <span class="btn-group">
                  <%= link_to t("edit"), edit_post_path(@post), class: "btn btn-primary btn-xs" %>
                  <%= link_to t("Delete"), post_path(@post),
                    class: "btn btn-danger btn-xs",  method: :delete,
                    data: { confirm: 'Are you sure?' } %>
              </span>
          </small>
        <% end %>
      </h1>
    </span>

    <%= render "shared/tags", post: @post%>
    <h4><small><%= "#{time_ago_in_words @post.updated_at}" %> <%= t("ago") %> </small></h4>

    <div>
      <%= markdown(@post.body) %>
    </div>
  </div>
</div>

<%= render "shared/comment_box"%>
