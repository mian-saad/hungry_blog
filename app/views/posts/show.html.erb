<% provide :title, t("post") %>

<div class="blog-box1">
<!--   <div class="blog-box-image">
    <img src="images/pre.png" title="priview" />
  </div> -->
  <div class="blog-box-content">
    <span>
      <h1><strong><%= link_to @post.title, post_path(@post) %></strong>
      <small>
          <span class="btn-group">
              <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary btn-xs" %>
              <%= link_to "Delete", @post, class: "btn btn-danger btn-xs", data: {method: :delete} %>
          </span>
      </small>
      </h1>

    </span>
    <%= render "shared/tags", post: @post%>

    <div>
      <%= markdown(@post.body) %>
    </div>

    <ul>
      <li><a><%= "#{time_ago_in_words @post.updated_at}" %> <%= t("ago") %></a></li>
      <li><%= link_to t("comment"), "" %></li>
    </ul>
  </div>
</div>
